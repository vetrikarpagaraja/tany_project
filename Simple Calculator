
#include<iostream>
using namespace std;

int main()
{
  cout<<"************* Simple Calculator******************/n"<<endl;
	float n1,n2,n3,s;
	cout<<"Enter the value of first number: ";
	cin>>n1;
	cout<<"\nEnter the value of second number: ";
	cin>>n2;

	cout<<"\nEnter 1 for sum, 2 for difference, 3 for product or 4 for ratio of A and B";
	cin>>s;

	switch(s){
		case 1:
			n3=n1+n2;
		cout<<"The sum of A and B is "<<n3;
			break;

		case 2:
			n3=n1-n2;
		cout<<"The difference between A and B is "<n3;
			break;

		case 3:
			n3=n1*n2;
		cout<<"The product of A and B is "<<n3;
			break;

		case 4:
			n3=n1/n2;
		cout<<"The ratio of A to B is "<<n3;
			break;

		default:
   cout<<"Chech the value of s!!!";
			break;

	}
	cout<<endl;

	return 0 ; 
}
